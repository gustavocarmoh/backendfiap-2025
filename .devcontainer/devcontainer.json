{
   "name":"project2025 (Java 21)",
   "dockerComposeFile":"docker-compose.yml",
   "service":"app",
   "workspaceFolder":"/workspaces",
   "overrideCommand":true,
   // "features":{
   //    "ghcr.io/devcontainers/features/maven:1":{
   //       "version":"latest"
   //    }
   // },
  //  "postCreateCommand":"mvn -q -DskipTests dependency:go-offline",
  //  "postStartCommand":"bash -lc 'wait-for-it postgres:5433 -- mvn -q org.springframework.boot:spring-boot-maven-plugin:3.3.2:run -Dspring-boot.run.jvmArguments=\"${SPRING_BOOT_JVM_ARGS}\"'",
   "forwardPorts":[
      8000,
      5005,
      1521,
      5500
   ],
   "customizations":{
      "vscode":{
         "extensions":[
            "vscjava.vscode-java-pack",
            "vscjava.vscode-maven",
            "vscjava.vscode-spring-boot-dashboard",
            "vscjava.vscode-spring-initializr",
            "vscjava.vscode-lombok",
            "redhat.java",
            "ms-azuretools.vscode-docker",
            "editorconfig.editorconfig",
            "eamodio.gitlens",
            "redhat.vscode-yaml",
            "vscjava.vscode-java-debug",
            "Oracle.oracledevtools",
            "Postman.postman-for-vscode",
            "bierner.markdown-mermaid"
         ],
         "settings":{
            "java.configuration.runtimes":[
               {
                  "name":"JavaSE-21",
                  "path":"${env:JAVA_HOME}",
                  "default":true
               }
            ],
            "java.import.maven.enabled":true,
            "java.import.gradle.enabled":false,
            "spring-boot.ls.java.home":"${env:JAVA_HOME}",
            "maven.executable.path":"/usr/bin/mvn"
         }
      }
   },
   "remoteUser":"vscode"
}